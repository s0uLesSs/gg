<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="Back"
    tools:context=".MainActivity20">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageButton10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:src="@drawable/arrow"
                tools:srcCompat="@drawable/arrow" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/eblo"
                tools:srcCompat="@drawable/eblo" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:text="Chinoso James" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:onClick="Go_tophon"
                android:src="@drawable/mobilka"
                tools:srcCompat="@drawable/mobilka" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="700dp"
                android:layout_weight="1"
                android:src="@drawable/emoji"
                tools:srcCompat="@drawable/emoji" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/message"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="700dp"
                android:background="@color/gray"
                android:elegantTextHeight="false"
                android:hint="Enter message"
                android:inputType="text"
                android:paddingTop="7dp"
                android:textSize="14sp"
                app:cornerRadius="4.96dp" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="700dp"
                android:layout_weight="1"
                android:src="@drawable/triangle"
                tools:srcCompat="@drawable/triangle" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>